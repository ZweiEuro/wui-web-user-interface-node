{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "target": "ES2016",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "types": ["node", "jest", "react"]
  },
  "include": [
    "./*.ts", // Include config files
    "./*.cjs",
    "src",
    "test"
  ],
  "exclude": ["node_modules", "lib"]
}
